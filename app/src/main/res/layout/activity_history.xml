<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jum.averagefoodprices.HistoryActivity">

    <com.androidplot.xy.XYPlot
        android:id="@+id/simpleplot"
        android:layout_width="fill_parent"
        android:layout_height="386dp"
        androidPlot.title="Price history"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        androidPlot.titleWidget.labelPaint.textSize="17dp"
        androidPlot.domainLabelWidget.labelPaint.textSize="15dp"
        androidPlot.rangeLabelWidget.labelPaint.textSize="15dp"
        androidPlot.graphWidget.rangeLabelPaint.textSize="12dp"
        androidPlot.graphWidget.rangeOriginLabelPaint.textSize="12dp"
        androidPlot.graphWidget.domainLabelPaint.textSize="12dp"
        androidPlot.graphWidget.domainOriginLabelPaint.textSize="12dp"
        androidPlot.domainLabel="Months"
        androidPlot.rangeLabel="Prices"
        androidPlot.legendWidget.textPaint.textSize="10dp"

        android:layout_alignParentTop="true" />

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddItem"
        android:layout_below="@+id/simpleplot"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:hint="Search for items" />

</RelativeLayout>
